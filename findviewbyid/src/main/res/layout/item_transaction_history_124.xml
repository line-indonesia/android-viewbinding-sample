<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="14dp"
    android:paddingBottom="14dp"
    android:paddingStart="18dp"
    android:paddingEnd="14dp"
    android:background="@drawable/selector_transaction_history_layout">

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_arrow_forward"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textViewPhaseStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#06c755"
        android:letterSpacing="-0.03"
        android:textAllCaps="true"
        tools:text="LUNAS" />

    <TextView
        android:id="@+id/textViewAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:textStyle="normal"
        android:textSize="18sp"
        android:textColor="#041b24"
        android:letterSpacing="-0.03"
        android:layout_marginTop="2dp"
        android:layout_below="@id/textViewPhaseStatus"
        tools:text="Rp3.000.000" />

    <TextView
        android:id="@+id/textViewDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#98a0b3"
        android:letterSpacing="-0.03"
        android:layout_below="@id/textViewAmount"
        android:layout_marginTop="6dp"
        tools:text="#1192 - 24 Juni 2020" />

</RelativeLayout>
